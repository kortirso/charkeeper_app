{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Charkeeper",
  "version": "0.2.20",
  "identifier": "org.kortirso.charkeeper",
  "build": {
    "beforeDevCommand": "yarn dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "yarn build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Charkeeper",
        "width": 1024,
        "height": 780,
        "maximized": true
      }
    ],
    "security": {
      "csp": null
    },
    "withGlobalTauri": true
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "android": {
      "versionCode": 2020
    }
  }
}
